{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/*"],
      "~components": ["./src/components"],
      "~components/*": ["./src/components/*"],
      "~assets": ["./src/assets"],
      "~assets/*": ["./src/assets/*"]
    }
  },
  "include": ["./src/**/*"]
}
